generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id     Int     @id @default(autoincrement())
  user_name   String? @unique
  user_pass   String? // nullable for Google login
  user_fname  String?
  user_lname  String?
  user_email  String  @unique
  user_phone  String?
  user_img    String?
  user_status Int
  google_id   String? @unique
}
